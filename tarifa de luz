/*19. Tarifa de Luz Eléctrica
Calcula la tarifa según el consumo: menor a 100 kWh, tarifa baja; entre 100 y 200 kWh, tarifa media; más de 200 kWh, tarifa alta.
*/
#include <iostream>
using namespace std;

int main()
{
    int consumo;

    cout << "Digite el consumo en kwh de su vivienda: " << "";
    cin >> consumo;

    if (consumo > 0)
    {
        if (consumo < 100)
        {
            cout << "Tarifa baja" << endl;
        }
        else if (consumo >= 100 && consumo < 200)
        {
            cout << "Tarifa media" << endl;
        }
        else
        {
            cout << "Tarifa alta" << endl;
        }
    }
    else
    {
        cout << "Entrada de datos invalida" << endl;
    }

    return 0;
}
